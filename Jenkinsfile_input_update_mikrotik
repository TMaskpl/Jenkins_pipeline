def FAILED_STAGE

pipeline {
    agent any
    parameters {
        choice choices: ["long-term", "stable", "testing"], description: 'Wybierz wersje mikrotika', name: 'ver'
    }
    options {
        ansiColor('xterm')
        buildDiscarder(logRotator(numToKeepStr: '7', artifactNumToKeepStr: '3'))
    }
    stages {
        stage('Cleaning... ') {
            steps {
                cleanWs()
            }
        }

        stage('Git clone...') {
            steps {
                script {
                    FAILED_STAGE=env.STAGE_NAME
                    echo 'Clone repository...'
                    git branch: 'main', credentialsId: 'pro_gitlab_secret', url: 'https://gitlab.com/dniemczok/ansible-mikrotik.git'
                }
            }
        }

        stage('Pliki inventory ansible') {
            steps {
                script {
                    sh '''
                    echo ${WORKSPACE}
                    cat /var/jenkins_home/inventory/mikrotikhost
                    '''
                }
            }
        }

        stage('Wprowadz nazwę mikrotika...') {
            steps {
                input id: 'mt_id', message: 'Wprowadz nazwę mikrotika z inventory', parameters: [string(defaultValue: '', description: '', name: 'mt_id')]
                sh "echo ${mt_id}"
            }
        }

        stage('Check mikrotik version ...') {
            steps {
                script {
                    FAILED_STAGE=env.STAGE_NAME
                    echo 'Check mikrotik version...'
                    ansiblePlaybook installation: 'Ansible', extras: '-e mt_id=${mt_id}', playbook: 'mikrotik_check_version.yml'
                }
            }
        }

        stage('Update mikrotik ${ver} ...') {
            steps {
                script {
                    FAILED_STAGE=env.STAGE_NAME
                    echo 'Update mikrotik ${ver}...'
                    ansiblePlaybook installation: 'Ansible', extras: '-e mt_id=${mt_id}' '-e vm_id=${ver}', playbook: 'mikrotik_update.yml'
                }
            }
        }
    }


    post {
        failure {
            echo "Failed stage name: ${FAILED_STAGE}"
            slackSend (color: '#FF0000', channel: 'tmaskpl', message: """FAILED_STAGE: Job "${env.STAGE_NAME} ${env.JOB_NAME} [${env.BUILD_NUMBER}]" (${env.BUILD_URL})""")
        }
    }
}
